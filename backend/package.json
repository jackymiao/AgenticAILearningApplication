{
  "name": "essay-grading-backend",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc --noEmitOnError false || tsc --skipLibCheck || true",
    "db:migrate": "tsx src/db/migrate.ts",
