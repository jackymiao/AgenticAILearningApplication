    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@openai/agents": "^0.3.7",
    "@openai/guardrails": "^0.2.1",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.24.1",
    "papaparse": "^5.4.1",
    "pg": "^8.11.3",
    "ws": "^8.19.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
